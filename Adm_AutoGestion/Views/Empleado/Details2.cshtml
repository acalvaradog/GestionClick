<script>

    $(document).ready(function () {

        GenerarQR(@Html.DisplayFor(model => model.Id));

        GenerarFoto(@Html.DisplayFor(model => model.NroEmpleado));
    });

    function GenerarQR(id){


        try {
            $.ajax({
                url: "@Url.Action("ObtenerQREmpleado")",
                data: { 'id': id },
                type: "post",
                success: function (e) {
                    if (e != null) {
                        document.getElementById("img_qr").src = "data:image/png;base64," + e;
                    }
                },
                error: function (xhr, status, error) { alert(error); }
            });
        }
        catch (e) { alert(e); }

    }

    function GenerarFoto(id) {



        try {
            $.ajax({
                url: "@Url.Action("ObtenerFotoEmpleado")",
                data: { 'id': id },
                type: "post",
                success: function (e) {
                    if (e != null) {
                        document.getElementById("img_foto").src = "data:image/png;base64," + e;
                    }
                },
                error: function (xhr, status, error) { alert(error); }
            });
        }
        catch (e) { alert(e); }

    }

</script>