                                    @Html.TextBox("Contraseña", null, htmlAttributes: new { @class = "form-control", autocomplete = "off", placeholder = "Contraseña" })
                                    @Html.ValidationMessageFor(model => model.Contraseña)
                                </div>
                                <div class="col-6">
                                    <div class="editor-label">
                                        Activo
                                    </div>

                                    @Html.DropDownListFor(model => model.Activo, new SelectList(ListItems, "Value", "Text"), "Seleccione...", htmlAttributes: new { @class = "form-control", autocomplete = "off", placeholder = "Activo" })
