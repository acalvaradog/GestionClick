                                        @Html.TextBox("Documento", null, htmlAttributes: new { @class = "form-control", autocomplete = "off", placeholder = "Documento", Required = true })
                                        @Html.ValidationMessageFor(model => model.Documento)
                                    </div>
                                </div>

                                <div class="col-6">
                                    <div class="editor-field">

