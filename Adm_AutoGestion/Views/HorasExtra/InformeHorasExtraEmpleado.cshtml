@model IEnumerable<Adm_AutoGestion.Controllers.HorasExtraController.InformeTotalHE>


@{
    ViewBag.Title = "InformeHorasExtraEmpleado";
    Layout = "~/Views/Shared/_LayoutMaestra.cshtml";
    string message = string.Format("{0}", Session["message"]);
    
}


@if (message != "" && message != null)
{



    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <h4 class="alert-heading">Error</h4>
        <hr>
        <p class="mb-0">@message</p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><span aria-hidden="true"></span></button>
    </div>

}

<script src="https://cdn.jsdelivr.net/npm/xlsx/dist/xlsx.full.min.js"></script>
<form method="post">
    <div class="card">
        <div class="card-header d-flex justify-content-between">
            <div class="header-title">
                <h4 class="card-title">Informe Total Horas Extra Gestion Humana</h4>
            </div>
        </div>
        <div class="card-body">
            <div class="row justify-content-start">
                <div class="col-3" style="text-align:left">
                    <label for="sospechoso">Fecha Pago Desde:</label>
                    @Html.TextBox("FechaI", "", htmlAttributes: new { @class = "form-control", type = "date", Required = true })
                </div>
                <div class="col-3" style="text-align:left">
                    <label for="sospechoso">Fecha Pago Hasta:</label>
                    @Html.TextBox("FechaF", "", htmlAttributes: new { @class = "form-control", type = "date", Required = true })
                </div>
                <div class="col-6" style="text-align:left">
                    <label for="sospechoso">Trabajador Solicitante</label>
                    @Html.DropDownList("TrabajadorS", new SelectList(ViewBag.Empleado, "Id", "Nombres"), "Seleccione...", htmlAttributes: new { @class = "form-control selectpicker", data_live_search = "true", Required = true })
                </div>

            </div>
         
                

            <br />


               


            <div class="row justify-content-start">
                <div class="col-12" style="text-align:center">
                    <button type="submit" id="Search" class="bi bi-save btn btn-outline-primary  rounded-pill mb-2" onclick="@Url.Action("InformeHorasExtraEmpleado","HorasExtra")" target="_blank"> Buscar</button>
                </div>
            </div>

            </div>
        </div>
    </div>

</form>


