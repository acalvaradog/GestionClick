@model IEnumerable<Adm_AutoGestion.Models.HistoricoHorasExtra>

@{
    ViewBag.Title = "HistorialHE";
    IEnumerable<Adm_AutoGestion.Models.HistoricoHorasExtra> Item = ViewBag.HistorialHE;


}

<div class="card">
    
    <div class="card-body">
        <div class="table-responsive">
            @if (Item.Count() > 0)
            {
            <table class="table table-striped table-sm  table-bordered">
                <tr>
                    @*<th>
            @Html.DisplayNameFor(model => model.VacacionesId)
        </th>*@
                    <br />
                    <th>
                        Fecha Solicitud
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.Accion)*@
                        Estado
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.Accion)*@
                        Observaciones
                    </th>

                    <th>
                        @*@Html.DisplayNameFor(model => model.UsuarioModifica)*@
                        Usuario Modifica
                    </th>
                </tr>

                @foreach (var HistorialHE in ViewBag.HistorialHE)
                {
                    <tr>

                        <td>
                            @HistorialHE.FechaSolicitud
                        </td>
                        <td>
                            @HistorialHE.EstadoNombre
                        </td>
                        <td>
                            @HistorialHE.Observaciones
                        </td>
                        <td>
                            @HistorialHE.Empleado.Nombres
                        </td>

                    </tr>
                }

            </table>
            <input type="hidden" id="HorasExtraId" value="@ViewBag.HorasExtraId" />
            }
            else
            {
                <br />
                <h6 class="text-center">No hay datos disponibles.</h6>
            }
        </div>
    </div>
</div>