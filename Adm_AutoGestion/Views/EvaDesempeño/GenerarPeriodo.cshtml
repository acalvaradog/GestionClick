
@{
    ViewBag.Title = "GenerarPeriodo";
    Layout = "~/Views/Shared/_LayoutMaestra.cshtml";
    string message = string.Format("{0}", Session["message"]);
    string message2 = string.Format("{0}", Session["message2"]);
}
@if (!string.IsNullOrWhiteSpace(message))
{

    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <h4 class="alert-heading">Mensaje:</h4>
        <hr>
        <p class="mb-0">@message</p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><span aria-hidden="true"></span></button>
    </div>
    Session.Remove("message");
}



@if (!string.IsNullOrWhiteSpace(message2))
{

    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <h4 class="alert-heading">Mensaje:</h4>
        <hr>
        <p class="mb-0">@message2</p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><span aria-hidden="true"></span></button>
    </div>
    Session.Remove("message");
}
<br />
<div class="d-flex justify-content-center">
    <p><h2>Generar Periodo</h2></p>

</div>
<div class="d-flex justify-content-center">
    <form method="post" id="form" enctype="multipart/form-data">
        <div class="card" id="Divprincipal">
            <div class="card-header"></div>
            <div class="card-body" id="Divprincipal">
                <div class="row">
                    <div class="col-12">
                        <label for="FechaI">Fecha de Inicio del Nuevo Período </label>
                        @Html.TextBox("FechaI", "{0:dd/MM/aaaa}", htmlAttributes: new { @class = "form-control", type = "date" })
                    </div>
                    <div class="col-12">
                        <label for="FechaF">Fecha de Fin del Nuevo Período </label>
                        @Html.TextBox("FechaF", "{0:dd/MM/aaaa}", htmlAttributes: new { @class = "form-control", type = "date" })
                    </div>
                    <div class="col-12">
                        <label for="FechaF">Año del Nuevo Período </label>
                        @Html.TextBox("Año", "", htmlAttributes: new { @class = "form-control", type = "number" })
                    </div>

                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="bi bi-plus-square btn btn-outline-primary mb-2"> Guardar</button>
            </div>
        </div>
    </form>
</div>

