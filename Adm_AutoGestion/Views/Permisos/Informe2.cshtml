        <thead class="text-center text-capitalize ">
            <tr>
                <th>Anular Permiso</th>
                <th>Nombre Empleado</th>
                <th>Codigo Empleado</th>
                <th>Cargo</th>
                <th>Fecha De Solicitud</th>
                <th> Fecha Ini.</th>
                <th>Fecha Fin</th>
