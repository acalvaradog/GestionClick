                                    @Html.DropDownList("Superior", new SelectList(ViewBag.Empleado, "NroEmpleado", "Nombres"), "Seleccione...", htmlAttributes: new { @class = "form-control selectpicker", data_live_search = "true", data_size = "8", required = "true" })
