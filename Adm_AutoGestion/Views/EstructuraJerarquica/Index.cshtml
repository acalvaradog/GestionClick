                    <th>
                        Unidad Org
                    </th>
                    <th>
                        Sociedad
                    </th>
                    <th>
                        Area
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Jefe)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Superior)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Director)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Lider)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="myTable">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UnidadOrg)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sociedad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Area)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NJefe.Nombres)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NSuperior.Nombres)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NDirector.Nombres)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NLider.Nombres)
                        </td>
                        <td class="align-middle">
