                        </td>
                        <td class="align-middle">
                            <center>
                                @*@Html.ActionLink(" ", "Delete", new { Id = item.Id }, new { data_modalSTRDelete = "", @class = "bi bi-x-square btn btn-outline-primary md-2" })*@
                                
