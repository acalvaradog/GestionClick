@model IEnumerable<Adm_AutoGestion.Models.EstructuraJerarquica>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMaestra.cshtml";
}

    @*<h2 class="colorTitulo text-center mt-3">Estructura Jerarquica</h2>*@

    


<div class="card ">
   
    <div class="card-header text-white fondoDegradado">Buscar</div>
    <div class="card-body">
        <div class="row justify-content-start mt-3">
            <div class="col-12" style="text-align:right"> @Html.ActionLink(" Crear Estructura", "Create", null, new { @class = "bi bi-plus-square btn btn-outline-primary rounded-pill md-2" })</div>
            <div class="col-8">
                <input class="form-control" id="myInput" type="text" placeholder="Buscar..">
            </div>

        </div>
    </div>
</div>

    <div class="table-responsive">
