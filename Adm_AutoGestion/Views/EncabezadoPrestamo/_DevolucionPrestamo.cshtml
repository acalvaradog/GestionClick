@model Adm_AutoGestion.Models.EncabezadoPrestamo
@using System.Web.UI.WebControls;




<br />
<form action="~/EncabezadoPrestamo/GuardarDevolucion">
    <div class="container">

@if (ViewBag.Ban == 0){
        <div class="card">
            <h6 class="card-header">Información Devolución:</h6>
            <div class="card-body">

 
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label for="NoEntrega" class="col-form-label-sm">No. Entrega:</label>
                            <input type="" id="IdEntrega" name="IdEntrega" value="@ViewBag.NoEntrega" class="form-control form-control-sm" type="hidden" readonly />
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.FechaRegistro, "Fecha Entrega:" ,htmlAttributes: new {@class = "col-form-label-sm"})
                             <input type="" id="FechaRegistro" name="FechaRegistro" value="@ViewBag.FechaEntrega" class="form-control form-control-sm" type="hidden" readonly />
                             @Html.ValidationMessageFor(model => model.FechaRegistro)
                        </div>

                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label for="Documento" class="col-form-label-sm">Documento:</label>
                            <input type="" id="Documento" name="Documento" value="@ViewBag.Documento" class="form-control form-control-sm " type="hidden" readonly />
                        </div>

                    </div>

                    <div class="col-6">
                        <div class="form-group">
                            <label for="Nombres" class="col-form-label-sm">Nombres Solicitante:</label>
                            <input type="" id="Nombres" name="Nombres" value="@ViewBag.Nombres" class="form-control form-control-sm " type="hidden" readonly />

                        </div>

                    </div>

                    <div class="col-6">
                        <div class="form-group">
                            <label for="Telefono" class="col-form-label-sm">No.Telefono:</label>
                            <input type="" id="Telefono" name="Telefono" value="@ViewBag.Telefono" class="form-control form-control-sm " type="hidden" readonly />
                        </div>

                    </div>

                    <div class="col-6">
                        <div class="form-group">
                            <label for="Correo" class="col-form-label-sm">Correo Electronico:</label>
                            <input type="" id="Telefono" name="Correo" value="@ViewBag.Correo" class="form-control form-control-sm" type="hidden" readonly />

                        </div>

                    </div>

        @if (ViewBag.Sociedad == "1"){

                    <div class="col-6">
                        <div class="form-group">
                            <label for="Sociedad" class="col-form-label-sm">Sociedad:</label>
                           <input type="" id="Sociedad" name="Sociedad" value="FOSCAL" class="form-control form-control-sm" type="hidden" readonly />
                          
                        </div>
                    </div>
}

  @if (ViewBag.Sociedad == "2"){

                    <div class="col-6">
                        <div class="form-group" class="col-form-label-sm">
                            <label for="Sociedad">Sociedad:</label>
                           <input type="" id="Sociedad" name="Sociedad" value="FOSCAL INTERNACIONAL" class="form-control form-control-sm" type="hidden" readonly />
                          
                        </div>
                    </div>
}
                </div>
            </div>
        </div>
<br />

<div class="card">
            <h6 class="card-header">Detalle de Prestamo:</h6>
            <div class="card-body">

                <div class="row">
                    
                    <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
                        <div class="table-responsive">
                            <table id="detalles" class="table table-striped table-bordered table-condensed table-hover table-sm">
                                <thead class="text-center text-capitalize ">
                                    <tr class="fondoDegradado text-white">
                                        <th style="text-align: center">Codigo</th>
                                        <th style="text-align: center">Tipo Elemento</th>
                                        <th style="text-align: center">Talla</th>
                                        <th style="text-align: center">Cantidad</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.DetallePrestamo)
                                    {

                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.TipoElementos.Nombre</td>
                                            <td>@item.Talla</td>
                                            <td>@item.Cantidad</td>

                                        </tr>


                                    }
                                </tbody>

                            </table>

                        </div>

                    </div>



                </div>

            </div>
        </div>



<div class="card">
  <h6 class="card-header">Validación de Llave</h6>
  <div class="card-body">
            <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                           @*  @Html.LabelFor(model => model.QRPrestamos, "No. Llave:")*@
                              <input id="QRPrestamosd" name="QRPrestamosd" value="" class="form-control form-control-sm" type="hidden" readonly />
                            
                        </div>
                    </div> 
<div class="col-6">
<div id="lectord" style="display: inline-block; width:100%"></div>
			<div id="scanned-resultd">	
			
		
	
      </div>  
</div> 
            </div>
    </div>
</div>
<br/>

            <div class ="row justify-content-center">
                <div class="col-12">
                    <button type = "button" class = "bi bi-bookmark-plus btn btn-outline-primary btn-m ml-3" id="btnDevolucionP" onclick = "javascript: return SaveDevolucion();">Guardar</button>
                    <button type="button" class="bi bi-bookmark-plus btn btn-outline-success btn-m ml-3" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
            <br />
      
}else{

 <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h4 class="alert-heading">Mensaje:</h4>
            <hr>
            <p class="mb-0">El solicitante no tiene devoluciones pendientes</p>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><span aria-hidden="true"></span></button>
        </div> 

}

</div>

</form>


