@model Adm_AutoGestion.Models.Municipio

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutMaestra.cshtml";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="card">
            <div class="card-header  colorTitulo mb-3 d-flex align-items-center justify-content-center">
                <h2>Editar Municipio</h2>

            </div>

            <div class="card-body">
                <fieldset>
                    <br />
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-4">

                                <div class="editor-label">
                                    @*@Html.LabelFor(model => model.GrupoId)*@
                                    Nombre
                                </div>
                                <div class="editor-field">
                                    @*@Html.EditorFor(model => model.GrupoId)*@
                                    @Html.TextBox("Nombre", null, htmlAttributes: new { @class = "form-control", required = "required" })
                                    @Html.ValidationMessageFor(model => model.Nombre)
                                </div>
                            </div>
                            <div class="col-sm-4">

                                <div class="editor-label">
                                    @*@Html.LabelFor(model => model.GrupoId)*@
                                    Codigo del Municipio
                                </div>
                                <div class="editor-field">
                                    @*@Html.EditorFor(model => model.GrupoId)*@
                                    @Html.TextBox("CodigoMunicipio", null, htmlAttributes: new { @class = "form-control", required = "required", type = "number" })
                                    @Html.ValidationMessageFor(model => model.CodigoMunicipio)
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="editor-label">
                                    Departamento
                                </div>
                                <div class="editor-field">
                                    @* @Html.EditorFor(model => model.Funcion)*@
                                    @Html.ValidationMessageFor(model => model.DepartamentoId)
                                    @Html.DropDownListFor(model => model.DepartamentoId, new SelectList(ViewBag.Departamentos, "Id", "Nombre"), "Seleccione un Departamento", htmlAttributes: new { @class = "form-control selectpicker", data_live_search = "true", required = "required" })
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="editor-label">
                                    Estado
                                </div>
                                <div class="editor-field">
                                    @* @Html.EditorFor(model => model.Funcion)*@
                                    @Html.TextBox("Estado", null, htmlAttributes: new { @class = "form-control", required = "required" })
                                    @Html.ValidationMessageFor(model => model.Estado)
                                </div>
                            </div>



                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="card-footer d-flex align-items-center justify-content-center">
                        <p>
                            <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                        </p>
                    </div>

                </fieldset>
            </div>

        </div>

    </fieldset>

}

<div>
    @Html.ActionLink("Volver", "Index")
</div>
