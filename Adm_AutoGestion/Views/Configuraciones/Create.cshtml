            <h2>Crear Configuración</h2>

        </div>

        <div class="card-body">
            <fieldset>

                <div class="row">
                    <div class="col-sm-6">

                        <div class="editor-label">
                            @Html.LabelFor(model => model.Parametro)
                        </div>
                        <div class="editor-field">
                            @* @Html.EditorFor(model => model.Parametro)*@
                            @Html.TextBox("Parametro", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Parametro)
