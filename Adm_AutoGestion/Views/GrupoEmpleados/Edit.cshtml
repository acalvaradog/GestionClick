@model Adm_AutoGestion.Models.GrupoEmpleados

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutMaestra.cshtml";
}

<br />
<br />
<div class="container">

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <div class="card">
            <div class="card-header  colorTitulo mb-3 d-flex align-items-center justify-content-center">
                <h2>Editar Grupo de Empleados</h2>

            </div>

            <div class="card-body">
                <fieldset>                 
                    <br />
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-7">

                                @Html.HiddenFor(model => model.Id)

                                <div class="editor-label">
                                    @Html.LabelFor(model => model.Descripcion)
                                </div>
                                <div class="editor-field">
                                    @*@Html.EditorFor(model => model.Descripcion)*@
                                    @Html.ValidationMessageFor(model => model.Descripcion)
                                    @Html.TextBox("Descripcion", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                                <br />
                                <div class="editor-label">
                                    @Html.LabelFor(model => model.Estado)
                                </div>
                                <div class="editor-field">
                                    @Html.CheckBoxFor(model => model.Estado, htmlAttributes: new { @class = "form-check-input" })
                                    @Html.ValidationMessageFor(model => model.Estado)
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="card-footer d-flex align-items-center justify-content-center">
                        <p>
                            <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                        </p>
                    </div>

                </fieldset>
            </div>

        </div>

    }
    <br />
    <div>
        @Html.ActionLink("Volver a la lista", "Index")
    </div>


</div>