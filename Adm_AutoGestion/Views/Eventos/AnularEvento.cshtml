@model Adm_AutoGestion.Models.Eventos

@using (Html.BeginForm())
{
    <div class="row me-5 ms-5 mt-3">
        <div class="col-12 d-flex justify-content-center">
            Esta seguro que desea&nbsp; <p style="font-weight:bold">anular</p> &nbsp;el evento?
        </div>
        <div class="col-12 d-flex justify-content-center">
            Esta operación no es reversible
        </div>
    </div>
