                            @*@Html.ActionLink(" ", null , null, new { @class = "btn close bi bi-life-preserver text-primary mr-4" }) No funciona*@
                            <a class="btn close bi bi-book-half text-primary mr-4" href="http://@LINKEVADESH" target="_blank"></a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

