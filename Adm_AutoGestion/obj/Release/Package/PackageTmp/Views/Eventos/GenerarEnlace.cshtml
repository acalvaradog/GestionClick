@model Adm_AutoGestion.Models.Eventos
@{
    string host = HttpContext.Current.Request.Url.Host;
}

<div class="container m-3">
    <div class="row">
        <div class="col-12 d-flex justify-content-center">
            <a id="Enlace" style="color:black;font-size:1.5rem;" target="_blank" href="PendienteFirma2/@Model.Id">@host/admautogestion/Eventos/PendienteFirma2/@Model.Id</a>
        </div>
        <div class="col-12 d-flex justify-content-center">
            <p style="font-size:1.2rem;color:black">La clave para acceder es: @Convert.ToDateTime(Model.FechaPublicacion).ToString("ddMMyyyy")@Model.Id</p>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12 d-flex justify-content-center">
            <button onclick="copiarEnlace();" class="bi bi-clipboard btn btn-outline-primary mb-2"> Copiar Enlace</button>
        </div>
    </div>
</div>

<script>
    async function copiarEnlace() {
        var Texto = document.getElementById("Enlace");

        await navigator.clipboard.writeText(Texto.textContent);
        alert("Copiado " + Texto.textContent)
    }
</script>
