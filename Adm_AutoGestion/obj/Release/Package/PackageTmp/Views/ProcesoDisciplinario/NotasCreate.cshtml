@model Adm_AutoGestion.Models.NotasProcesos
@using System.Web.UI.WebControls;
@*<script src="~/Contents/js/Procesos.js"></script>*@
@{
    ViewBag.Title = "NotasCreate";
    //Layout = "~/Views/Shared/_LayoutMaestra.cshtml";
    Adm_AutoGestion.Models.ProcesoDisciplinario Item = ViewBag.Proceso;
}

<div class="container">
    <form action="javascripts:;" enctype="multipart/form-data" method="post">
        <div class="container">
            <input type="text" value="@ViewBag.Proceso.Id" id="IdProceso" name="IdProceso" disabled hidden />

            <div class="container-fluid">

                <!--contenido-->
                <div class="row mt-3">
                    <div class="col-6">
                        <label>Anotación</label>
                        @Html.TextArea("Anotacion", null, htmlAttributes: new { @class = "form-control", rows = "1", cols = "50" })
                        @Html.ValidationMessageFor(model => model.Anotacion)

                    </div>
                    <div class="col-6 d-flex align-items-end">
                        <label class="bi bi-upload btn btn-outline-primary">
                            <span id="labelFile"> Subir Anexo</span>
                            <input type="file" id="Anexo" hidden onchange="mostrarNombreArchivo();" />
                        </label>
                    </div>
                </div>
            </div>

            <div class="panel-body">
                <br />
                <div class="panel panel-default" style="text-align:center">
                    <button class="bi bi-save btn btn-outline-primary mb-2" id="AddN" onclick="javascript: return SaveNote();"> Guardar</button>
                </div>
            </div>

        </div>
        <br>
    </form>
</div>

<script>
    function mostrarNombreArchivo() {
        var file = $("#Anexo").get(0).files;
        var archivo = file[0];
        var texto = document.getElementById('labelFile');

        texto.innerHTML = " Archivo subido: " + archivo.name;

    }
</script>