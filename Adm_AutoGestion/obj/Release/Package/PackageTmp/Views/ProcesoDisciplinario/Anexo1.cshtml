@model IEnumerable<Adm_AutoGestion.Models.PDAnexos>

@{
    Adm_AutoGestion.Models.Empleado Item = ViewBag.Empleado;
}

<div class="container">
    <div class="form-inline" role="form">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 d-flex mt-3">
                    <label for="Nombre" class="control-label">Empleado Registra: </label>
                    <input type="text" class="form-control" id="Nom" value="@Item.Nombres" readonly />
                </div>
            </div>
        </div>
    </div>
    <br />

    <div class="table-responsive">
        <table class="table table-hover">
            <tr class="text-white fondoDegradado">
                @* <th>
                        @Html.DisplayNameFor(model => model.IncapacidadId)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Archivo)
                </th>
                <th>
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.IncapacidadId)
                        </td>*@

                    <td>
                        @Html.DisplayFor(modelItem => item.Archivo)
                    </td>
                    <td>
                        @Html.ActionLink("Descargar Archivo", "Download1", new { archivo = item.Archivo })
                    </td>

                </tr>
            }

        </table>
        <br />
    </div>
</div>
