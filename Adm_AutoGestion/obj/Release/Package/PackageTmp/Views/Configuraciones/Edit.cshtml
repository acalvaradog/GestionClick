@model Adm_AutoGestion.Models.Configuraciones

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutMaestra.cshtml";
}






    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <div class="card">
            <div class="card-header  colorTitulo mb-3 d-flex align-items-center justify-content-center">
                <h2>Editar Configuración</h2>

            </div>

            <div class="card-body">
                <fieldset>
                    @Html.HiddenFor(model => model.Id)

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="editor-label">
                                Parametro
                            </div>
                            <div class="editor-field">
                                @* @Html.EditorFor(model => model.Parametro)*@
                                @Html.TextBox("Parametro", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Parametro)
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="editor-label">
                                Descripcion
                            </div>
                            <div class="editor-field">
                                @*  @Html.EditorFor(model => model.Descripcion)*@
                                @Html.TextBox("Descripcion", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Descripcion)
                            </div>
                        </div>

                        <div class="col-sm-12">
                            <div class="editor-label">
                                Valor
                            </div>
                            <div class="editor-field">
                                @*  @Html.EditorFor(model => model.Valor)*@
                                @Html.TextArea("Valor", null, htmlAttributes: new { @class = "form-control", rows = "10", cols = "40" })
                                @Html.ValidationMessageFor(model => model.Valor)
                            </div>
                        </div>

                    </div>



                    <div class="card-footer d-flex align-items-center justify-content-center">
                        <p>
                            <input type="submit" value="Crear" class="btn btn-outline-primary rounded-pill" />
                        </p>
                    </div>

                    <div>
                        @Html.ActionLink("Atras", "Index")
                    </div>

                </fieldset>
            </div>

        </div>
    

    }




