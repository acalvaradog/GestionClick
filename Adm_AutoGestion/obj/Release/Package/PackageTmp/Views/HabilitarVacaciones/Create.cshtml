@model Adm_AutoGestion.Models.HabilitarVacaciones
@using System.Web.UI.WebControls;

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutMaestra.cshtml";
    string message = string.Format("{0}", Session["message"]);
}

@{var ListItems = new List<ListItem> {
        new ListItem { Text = "SI", Value = "SI" },
        new ListItem { Text = "NO", Value = "NO" }
        };
}



    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <fieldset>

            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <div class="header-title">
                        <h4 class="card-title">Habilitar Vacaciones</h4>
                    </div>


                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-5">

                            <div class="editor-label">
                                @*@Html.LabelFor(model => model.EmpleadoId)*@
                                Codigo Empleado
                            </div>
                            <div class="editor-field">
                                @*@Html.EditorFor(model => model.EmpleadoId)*@
                                @Html.TextBox("EmpleadoId", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.EmpleadoId)
                            </div>
                            <br />
                            <div class="editor-label">
                                @*@Html.LabelFor(model => model.DiasMayor6)*@
                                Menor a 6 Dias
                            </div>
                            <div class="editor-field">
                                @*@Html.EditorFor(model => model.DiasMayor6)*@
                                @Html.DropDownListFor(model => model.DiasMayor6, new SelectList(ListItems, "Value", "Text"), "Seleccione...", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.DiasMayor6)
                            </div>
                            <br />
                            <div class="editor-label">
                                @*@Html.LabelFor(model => model.Anticipadas)*@
                                Anticipadas
                            </div>
                            <div class="editor-field">
                                @*@Html.EditorFor(model => model.Anticipadas)*@
                                @Html.DropDownListFor(model => model.Anticipadas, new SelectList(ListItems, "Value", "Text"), "Seleccione...", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Anticipadas)
                            </div>
                            <br />
                            <div class="editor-label">
                                @*@Html.LabelFor(model => model.Pagadas)*@
                                En Dinero
                            </div>
                            <div class="editor-field">
                                @Html.DropDownListFor(model => model.Pagadas, new SelectList(ListItems, "Value", "Text"), "Seleccione...", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Pagadas)
                            </div>

                        </div>
                    </div>
                    <br />
                    <div class="row justify-content-start">
                        <div class="col-12">
                            <button type="submit" class="bi bi-plus-square btn btn-outline-primary rounded-pill mb-2"> Crear</button>
                            @Html.ActionLink(" Atras", "Index", null, new { @class = "bi bi-box-arrow-in-left btn btn-outline-primary rounded-pill mb-2" })
                        </div>
                    </div>
                </div>
            </div>
              
               

               
</fieldset>
    }
