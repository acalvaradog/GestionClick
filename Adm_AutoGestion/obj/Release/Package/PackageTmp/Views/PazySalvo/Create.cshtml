@model IEnumerable<Adm_AutoGestion.Models.AreasPazySalvo>
@using System.Web.UI.WebControls;
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutMaestra.cshtml";
    string message = string.Format("{0}", Session["message"]);
}

@if(!string.IsNullOrWhiteSpace(message)) { 

if(message == "OK"){

<div class="alert alert-primary alert-dismissible fade show" role="alert">
            <h4 class="alert-heading">Exitoso</h4>
            <hr>
            <p class="mb-0">Los datos fueron guardados correctamente.</p>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span>
        </div>


}else{
<div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h4 class="alert-heading">Error</h4>
            <hr>
            <p class="mb-0">A ocurrido un error. No fue posible realizar el registro.</p>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span>
        </div>

}

Session.Remove("message"); }







<div class="card">
    <div class="card-header d-flex justify-content-between">
        <div class="header-title">
            <h4 class="card-title">Registrar Responsables Paz y Salvo</h4>
        </div>


    </div>

    <div class="card-header "></div>
    <div class="card-body">

        <form action="~/PazySalvo/Create1">
            <div class="row justify-content-start">
                <div class="col-6" style="text-align:left">
                    <label for="Nombre">Area: </label>
                    @Html.DropDownList("Area", (List<SelectListItem>)ViewBag.Areas, "Seleccione el Area", htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="col-6" style="text-align:left">
                    <label for="Nombre">Responsable: </label>
                    @Html.DropDownList("Responsable", new SelectList(ViewBag.Empleado, "Id", "Nombres"), "Seleccione...", htmlAttributes: new { @class = "form-control", data_live_search = "true" })
                </div>
            </div>
            <br />


            <div class="row justify-content-start">
                <div class="col-12" style="text-align:center">
                    <button type="submit" id="Search" class="btn btn-outline-primary rounded-pill mb-2" >Crear</button>
                </div>
            </div>
        </form>
    </div>
</div>







<div class = "table-responsive">
<table class= "table table-striped">
  <tr >
