
@{
    ViewBag.Title = "AgregarRegistro";
    Layout = "~/Views/Shared/_LayoutMaestra.cshtml";
}

<h2 class="text-center colorTitulo">Agregar Registro</h2>

@using (Html.BeginForm())
{
<div class="card mt-3">
    <div class="card-body">
        <div class="row mt-3">
            <div class="col-6">
                <label>Empleado</label>
                @Html.DropDownList("Empleados", new SelectList(ViewBag.Empleados, "Id", "Nombres"), "Seleccione...", htmlAttributes: new { @class = "form-control selectpicker", data_live_search = "true", @required = "true" })
            </div>
            <div class="col-6">
                <div>
                    <label>Fecha</label>
                    <input required id="Fecha" name="Fecha" class="form-control" type="date" />
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-12 d-flex justify-content-center">
                <button type="submit" class="bi bi-save btn btn-outline-primary mb-2"> Guardar</button>
            </div>
        </div>
    </div>
</div>
}

<script>
    $(document).ready(function () {
        var err = "@ViewBag.Message";

        if (err == "true") {
            alertify.alert("Cambio guardado.");
        } else if (err == "null") {
            alertify.alert("Faltan datos por diligenciar, por favor revise.");
        } else if (err == "fecha") {
            alertify.alert("La fecha no puede ser mayor a la actual.");
        } else if (err == "existe") {
            alertify.alert("Ya existe un registro de este empleado.");
        } else if (" ") {

        } else if (err == "error"){
            alertify.alert("Ha ocurrido un error inesperado, consulte al administrador");
        }
    });
</script>
