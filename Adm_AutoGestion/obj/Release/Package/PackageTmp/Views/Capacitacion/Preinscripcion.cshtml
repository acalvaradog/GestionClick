
@{
    ViewBag.Title = "Preinscripcion";
    Layout = "~/Views/Shared/_LayoutMaestra.cshtml";
}

@using (Html.BeginForm())
{
    <div class="card m-3" style="margin-top:72px !important;">
        <div class="card-header colorTitulo">
            <h5>Preinscripcion</h5>
        </div>
        <div class="card-body">
            <div class="row mt-3">
                <div class="col-6">
                    <label>Nombre</label>
                    <input type="text" id="Nombre" name="Nombre" class="form-control" />
                </div>

                <div class="col-3">
                    <label>Dependencia</label>
                    @Html.DropDownList("Empresa", new SelectList(ViewBag.Sociedad, "Codigo", "Descripcion"), "Seleccione...", htmlAttributes: new { @class = "form-control selectpicker" })
                </div>

                <div class="col-3">
                    <label>Cargo</label>
                    <input type="text" id="Cargo" name="Cargo" class="form-control" />
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-3">
                    <label>Correo</label>
                    <input type="text" id="Correo" name="Correo" class="form-control" />
                </div>

                <div class="col-3">
                    <label>Celular</label>
                    <input type="number" id="Celular" name="Celular" class="form-control" />
                </div>

                <div class="col-3">
                    <label>Tipo de participante</label>
                    <select id="Tipo" name="Tipo" class="form-control selectpicker">
                        <option value="">Seleccione...</option>
                        <option>Administrativo</option>
                        <option>Asistencial</option>
                        <option>Docencia y servicio</option>
                        <option>Externo</option>
                    </select>
                </div>

                <div class="col-3">
                    <label>Documento</label>
                    <input type="number" id="Documento" name="Documento" class="form-control" />
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-12 d-flex justify-content-center">
                    <button type="submit" class="bi bi-save btn btn-outline-primary mb-2"> Guardar</button>
                </div>
            </div>
        </div>
    </div>
}
