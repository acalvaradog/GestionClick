@model IEnumerable<Adm_AutoGestion.Models.PreguntaFrecuente>

@{
    ViewBag.Title = "View1";
    List<string> funciones = Adm_AutoGestion.Models.Acceso.Validar(Session["Empleado"]); 
    Layout = "~/Views/Shared/_LayoutMaestra.cshtml";
}

<div class="container">


<br />
<br />
<br />
<h2>Preguntas</h2
<br />
<br />
<p>
    @if(funciones.Contains("Preguntas-Crear")){
       @Html.ActionLink("Crear Nueva Pregunta", "Create")}
</p>
<br />
<div class = "table-responsive">
<table class= "table table-hover table-sm">
    <tr class="table-info">
        <th>
            @Html.DisplayNameFor(model => model.Pregunta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Respuesta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Activo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TemaId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmpleadoId)
        </th>
        @*<th></th>*@
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Pregunta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Respuesta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Activo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TemaPregunta.Tema)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmpleadoId)
        </td>
        @*<td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>*@
    </tr>
}

</table>
</div>

</div>