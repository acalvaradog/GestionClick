@foreach (var item in Model) {
    <tr>
        <td>
        @*    <div style="width: 60px; height: 60px; -moz-border-radius: 50%; -webkit-border-radius: 50%;border-radius: 50%; background: #5cb85c;"></div>*@
        @if(item.Color=="verde"){
            <div class="circulo" style="background:#3BDA52"></div>}
            @if(item.Color=="amarillo"){
            <div class="circulo" style="background:#FFF44A"></div>}
            @if(item.Color=="rojo"){
            <div class="circulo" style="background:#F14242"></div>}
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.Tiempo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Empleado.Nombres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Empresa.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EstadoRdP.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Horario.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Jornada.Nombre) -Horas
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MtvSolicitud.Nombre)
        </td>
