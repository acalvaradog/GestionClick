        <div class="card-body" >
             <div class="row justify-content-center">
            <form method="post">
           
                <div class="col-4" style="text-align:center">
              
                    <input type="text" readonly="true" value="verde" id="color" name="color" hidden/>
                    <button type = "submit" id = "color2" class = "btn circulo2" style="background-color:#3BDA52; color:black; "  onclick = "@Url.Action("Semaforo","RequerimientosPersonal")"><b>@ViewBag.Verde</b></button>
                </div>
         
            </form>
            <form method="post">
          
                <div class="col-4" style="text-align:center">
                  
                     <input type="text" readonly="true" value="amarillo" id="color" name="color" hidden/>
                    <button type = "submit" id = "color3" class = "btn circulo2" style="background-color:#FFF44A; color:black; "  onclick = "@Url.Action("Semaforo","RequerimientosPersonal")"><b>@ViewBag.Amarillo</b></button>
                </div>
        
            </form>
            <form method="post">
           
                <div class="col-4" style="text-align:center">
              
                    <input type="text" readonly="true" value="rojo" id="color" name="color" hidden/>
                    <button type = "submit" class = "btn circulo2" style="background-color:#F14242; color:black "  onclick = "@Url.Action("Semaforo","RequerimientosPersonal")"><b>@ViewBag.Rojo</b></button>
                </div>
      
            </form>
            <form method="post">
           
                <div class="col-4" style="text-align:center">
           
                    <input type="text" readonly="true" value="" id="color" name="color" hidden/>
                    <button type = "submit" class = "btn circulo2" style="background-color:#B2BABB; color:black "  onclick = "@Url.Action("Semaforo","RequerimientosPersonal")"><b>@ViewBag.Total</b></button>
                </div>
         
            </form>
            </div>

        </div>
    </div>
           </div>
       <div class="col-2"></div>
       <div class="col-2"></div>
     </div>
   <br />
<div class="container-fluid">
<div class = "table-responsive">

