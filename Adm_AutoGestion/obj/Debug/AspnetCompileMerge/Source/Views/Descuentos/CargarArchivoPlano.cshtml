@model Adm_AutoGestion.Models.DescuentosReportados
@using System.Web.UI.WebControls;

@{
    ViewBag.Title = "CargarArchivoPlano";
    Layout = "~/Views/Shared/_LayoutMaestra.cshtml";
}

@{var ListItems = new List<ListItem> {
        new ListItem { Text = "Enero", Value = "Enero" },
        new ListItem { Text = "Febrero", Value = "Febrero" },
        new ListItem { Text = "Marzo", Value = "Marzo" },
        new ListItem { Text = "Abril", Value = "Abril" },
        new ListItem { Text = "Mayo", Value = "Mayo" },
        new ListItem { Text = "Junio", Value = "Junio" },
        new ListItem { Text = "Julio", Value = "Julio" },
        new ListItem { Text = "Agosto", Value = "Agosto" },
        new ListItem { Text = "Septiembre", Value = "Septiembre" },
        new ListItem { Text = "Octubre", Value = "Octubre" },
        new ListItem { Text = "Noviembre", Value = "Noviembre" },
        new ListItem { Text = "Diciembre", Value = "Diciembre" }
        };
}

<div class="container">
    <br />
    <h2 class="colorTitulo text-center">Descuentos Reportados</h2>
    @using (Html.BeginForm("CargarArchivoPlano", "Descuentos", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true)

        <fieldset>
            <div class="row justify-content-start">
                <div class="col-12">
                    <div class="card ">
                        <div class="card-header text-white fondoDegradado mb-2">Descuentos</div>
                        <div class="card-body">
                            <div class="row justify-content-start">
                                <div class="col-4" style="text-align:center">
                                    <img src="~/Contents/image/cuenta.png">
                                </div>
                                <div class="col-8 d-flex">
                                    <div class="row">

                                        <div class="col-4">
                                            <div class="editor-label">
                                                Mes
                                            </div>
                                            <div class="editor-field">
                                                @Html.DropDownListFor(model => model.Mes, new SelectList(ListItems, "Value", "Text"), "Seleccione...", htmlAttributes: new { @class = "form-control", autocomplete = "off" })
                                                @Html.ValidationMessageFor(model => model.Mes)
                                            </div>
                                        </div>

                                        <div class="col-4">
                                            <div class="editor-label">
                                                Año
                                            </div>
                                            <div class="editor-field">
                                                @*@Html.EditorFor(model => model.anio)*@
                                                @Html.TextBox("anio", null, htmlAttributes: new { @class = "form-control", autocomplete = "off", placeholder = "año" })
                                                @Html.ValidationMessageFor(model => model.anio)
                                            </div>
                                        </div>

                                        <div class="col-4">
                                            <div class="editor-label">
                                                Servicio
                                            </div>
                                            <div class="editor-field">
                                                @*@Html.TextBox("ServicioId", null, htmlAttributes: new { @class = "form-control", autocomplete = "off", placeholder = "ServicioId" } )*@
                                                @Html.DropDownListFor(model => model.ServicioId, new SelectList(Model.ListadoServicios, "Id", "Nombre"), "Seleccione...", htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.ServicioId)
                                            </div>
                                        </div>

                                        <div class="col-12 mt-3">
                                            <div class="editor-field">
                                                <input type="file" name="file" />
                                            </div>
                                        </div>

                                        <div class="col-12 d-flex align-items-end justify-content-center">
                                            <button type="submit" class="bi bi-upload btn btn-outline-primary mb-2 me-2"> Subir archivo</button>
                                            @Html.ActionLink(" Atras", "Index", null, new { @class = "bi bi-box-arrow-in-left btn btn-outline-primary mb-2" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
    }
</div>