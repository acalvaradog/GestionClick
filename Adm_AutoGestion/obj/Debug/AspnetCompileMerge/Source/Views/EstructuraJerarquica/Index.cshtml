@model IEnumerable<Adm_AutoGestion.Models.EstructuraJerarquica>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMaestra.cshtml";
}
<div class="container">
    <h2 class="colorTitulo text-center mt-3">Estructura Jerarquica</h2>

    <p>
        @Html.ActionLink(" Crear Estructura", "Create", null, new { @class = "bi bi-plus-square btn btn-outline-primary md-2" })
    </p>


    <div class="card ">
        <div class="card-header text-white fondoDegradado">Buscar</div>
        <div class="card-body">
            <div class="row justify-content-start mt-3">
                <div class="col-6">
                    <input class="form-control" id="myInput" type="text" placeholder="Buscar..">
                </div>
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-sm">
            <thead>
                <tr class="text-white fondoDegradado">
                    <th>
                        Sociedad
                    </th>
                    <th>
                        Area
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Jefe)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Superior)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Director)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="myTable">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sociedad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Area)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NJefe.Nombres)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NSuperior.Nombres)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NDirector.Nombres)
                        </td>
                        <td class="align-middle">
                            <a href="/EstructuraJerarquica/Edit/@item.Id" title="Editar"><buttom class="bi bi-pencil-square btn btn-outline-primary md-2"></buttom></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>


<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>