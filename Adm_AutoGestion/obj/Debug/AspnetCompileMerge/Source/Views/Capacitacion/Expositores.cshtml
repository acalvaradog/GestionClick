                                            <div class="editor-field">
                                                @Html.DropDownList("EmpleadoId", new SelectList(ViewBag.Empleado, "nomcodigo", "Nombres"), "Seleccione...", htmlAttributes: new { @class = "form-control js-example-basic-single select2-selection select2-selection--single", data_live_search = "true" })
