                                    </a>
                                }
                            </td>
                            <td style="text-align:center">
                                <a href='@Url.Action("CopiarCap", "Capacitacion", new { id = item.Id}, null)'>
                                    <img src='@Url.Content("~/Contents/image/copiar.png")' />

                                </a>
                            </td>
                            <td>
