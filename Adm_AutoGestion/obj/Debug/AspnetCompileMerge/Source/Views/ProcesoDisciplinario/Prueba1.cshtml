@model IEnumerable<Adm_AutoGestion.Models.PDPruebas>
@{
    Adm_AutoGestion.Models.Empleado Item = ViewBag.Empleado;
}

<div class="container">
    <div class="form-inline" role="form">
        <div class="container">
            <div class="row">
                <div class="col-12 d-flex mt-3">
                    <label for="Nombre" class="control-label">Empleado Registra: </label>
                    <input type="text" style="display: inline-block;" class="form-control" id="Nom" value="@Item.Nombres" readonly />
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="table-responsive">
        <table class="table table-hover">
            <tr class="text-white fondoDegradado">
                <th>
                    @Html.DisplayNameFor(model => model.TipoPrueba)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Adjunto)
                </th>
                <th>
                    Descripcion
                </th>
                <th>

                </th>

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoPrueba)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adjunto)
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                    <td>
                        @if (item.Adjunto != "SinAdjuntar")
                        {
                            @Html.ActionLink("Descargar Archivo", "Download2", new { archivo = item.Adjunto })}
                        else
                        {<label>No hay Archivo</label>}
                    </td>
                </tr>
            }
        </table>
        <br />
    </div>
</div>
