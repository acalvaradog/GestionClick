                                </a>
                                @*@Html.ActionLink("Ver Anexos", "Anexo1", new { Id=item.Id,Id2=item.EmpleadoRegistraId }, new { data_modal5 = "" })*@

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Estado)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NivelPrioridad)
                            </td>
                            <td>
                                <a href='@Url.Action("NotaDetails", "ProcesoDisciplinario", new { Id=item.Id}, null)' data-modal14='' style="text-align:center">
                                    <img src="~/Contents/image/vernota.png" alt="PendientesPorFirmar" data-bs-toggle="tooltip" data-bs-placement="top" title="Ver Notas" />
                                </a>
                                @*@Html.ActionLink("Ver", "NotaDetails", new { Id=item.Id}, new { data_modal14 = "" } )*@
