@model Adm_AutoGestion.Models.Eventos

<script src="~/Contents/js/Eventos.js"></script>


@using (Html.BeginForm())
{
    <div class="row me-5 ms-5 mt-3">
        <div class="col-12">
            <label>Presupuesto</label>
            @Html.EditorFor(model => model.Presupuesto, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="row mt-3 mb-2">
        <div class="col-12 d-flex justify-content-center">
            <button type="submit" class="bi bi-save btn btn-outline-primary me-3 mb-2"> Guardar Presupuesto</button>
            <a class="bi bi-bag-check btn btn-outline-primary mb-2" href="@Url.Action("ConfirmarCierre","Eventos", new {id = Model.Id}, null)" data-confirmarcierre=''> Confirmar Cierre</a>
        </div>
    </div>
}