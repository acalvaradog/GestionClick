<MudCard Elevation="0" Square="true" Class="@Class" Style="@Style">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar Image="@Foto" />
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.subtitle2">@Nombre</MudText>
            <MudText Typo="Typo.caption">@Cargo</MudText>
        </CardHeaderContent>
    </MudCardHeader>
</MudCard>

@code {
    [Parameter] public string Nombre { get; set; }
    [Parameter] public string Cargo { get; set; }
    [Parameter] public string Class { get; set; }
    [Parameter] public string Style { get; set; }
    [Parameter] public string Foto { get; set; }
}